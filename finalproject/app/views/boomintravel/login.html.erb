<html>
<head>
<link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
<link rel="stylesheet" href="stylesheets/login.css">
	<title>Login</title>
	<img src="/assets/logo_1.png" height="100px">
</head>
<body>
<div class="container">
	<div class="nav">
		<ul>
			<li><a href="/">HOME</a></li>
			<li><a href="login">REGISTER/LOGIN</a></li>
			<li><a href="profile">PROFILE</a></li>
			<li><a href="flight">FLIGHTS</a></li>
			<li><a href="hotel">HOTELS</a></li>
			<li><a href="event">EVENTS</a></li>
			<button><a href="/">Logout</a></button>

		<br><br>
	</div>
	<div class="login">
		<form method="post" action="/login">
			<br><h1>Login</h1>
			<%= csrf_meta_tags %>
			<label>Email </label>
			<input id="emaillogin" name="emaillogin" required="required" type="text" placeholder="Email" />
<br><br>
			<label> Password</label>
			<input id="passwordlogin" name="passwordlogin" required="required" type="password" placeholder="Password"/> 

			<button type="submit">Login</button>
			<input type="checkbox" checked="checked">Remember Me
		</form>
	</div>
	<div class="login">
		<span class="password">Forgot <a href="#">password?</a></span>
	</div>
	<div class="row">
	  <div class="signin">

	  	<% if flash[:errors] %>
			<% flash[:errors].each do |error| %>
				<p><%= error %></p>
			<% end %>
		<% end %>

	    <%= form_for(@user) do |f| %>
	<h1>Register</h1>
	      <%= f.label :name %>
	      <%= f.text_field :name %>

	      <%= f.label :email %>
	      <%= f.email_field :email %>
<br><br>
	      <%= f.label :password %>
	      <%= f.password_field :password %>

	      <%= f.label :password_confirmation, "Password Confirmation" %>
	      <%= f.password_field :password_confirmation %>

	      <%= f.submit "Create my account", class: "btn btn-primary" %>
	    <% end %>
	</div>
</div>
</body>
<footer>
	<p>Boomin' Travel Â© 2017. All rights reserved.</p>
</footer>
</html>