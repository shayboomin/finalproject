<html>
<head>
<link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
	<title>Login</title>
	<img src="/assets/logo_1.png" height="100px">
</head>
<body>
<div class="container">
	<div class="nav">
		<a href=""><img src="assets/home.png" height="100px"></a>
		<a href="login"><img src="assets/signin.png" height="100px"></a>
		<a href="profile"><img src="assets/account.png" height="100px"></a>
		<a href="flight"><img src="assets/flight.png" height="100px"></a>
		<a href="hotel"><img src="assets/hotel.png" height="100px"></a> 
		<a href="event"><img src="assets/event.png" height="100px"></a>
	</div>
	<div class="login">
		<form>
			<h1>Login</h1>
			<label>Email </label>
			<input id="emaillogin" name="emaillogin" required="required" type="text" placeholder="Email" />

			<label> Password</label>
			<input id="passwordlogin" name="passwordlogin" required="required" type="password" placeholder="Password"/> 

			<button type="submit">Login</button>
			<input type="checkbox" checked="checked">Remember Me
	</div>
				<p class="login button"> 
					<input type="submit" value="Login"/> 
				</p>
	<div class="login">
		<span class="password">Forgot <a href="#">password?</a></span>
	</div>
		</form>
	<div class="row">
	  <div class="signin">
	    <%= form_for(@user) do |f| %>
	      <%= f.label :name %>
	      <%= f.text_field :name %>

	      <%= f.label :email %>
	      <%= f.email_field :email %>

	      <%= f.label :password %>
	      <%= f.password_field :password %>

	      <%= f.label :password_confirmation, "Confirmation" %>
	      <%= f.password_field :password_confirmation %>

	      <%= f.submit "Create my account", class: "btn btn-primary" %>
	    <% end %>
	</div>
</div>
</body>
</html>