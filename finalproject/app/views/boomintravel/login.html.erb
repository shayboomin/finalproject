<html>
<head>
	<title>Login</title>
	<img src="/assets/logo_1.png" height="100px">
	<style>
#nav {
		display: inline;
		padding: 20px;
	}
.container{
	background-color: #E8869D;
}
form {
	border: 2px solid #f1f1f1;
}
input [type=text], input[type=password] {
	width: 100%;
	padding: 12px 20px;
	margin: 8px 0;
	display: inline-block;
	border: 1px solid #ccc;
	box-sizing: border-box;
}
span.password{
	float: right;
	padding-top: 16px;
}
	</style>
</head>
<body>
<div class="container">
	<div>
		<ul id="nav">
			<a href="/"><img class="pure-img" src="assets/home.png" height="100px"></a>
			<a href="login"><img src="assets/signin.png" height="100px"></a>
			<a href="profile"><img src="assets/account.png" height="100px"></a>
			<a href="flight"><img src="assets/flight.png" height="100px"></a>
			<a href="hotel"><img src="assets/hotel.png" height="100px"></a>
			<a href="event"><img src="assets/event.png" height="100px"></a>
		</ul>
	</div>
	<div class="login">
		<form>
			<h1>Login</h1>
			<label>Username </label>
			<input id="usernamelogin" name="usernamelogin" required="required" type="text" placeholder="Username" />

			<label> Password</label>
			<input id="passwordlogin" name="passwordlogin" required="required" type="password" placeholder="Password"/> 

			<button type="submit">Login</button>
			<input type="checkbox" checked="checked">Remember Me
	</div>
				<p class="login button"> 
					<input type="submit" value="Login"/> 
				</p>
	<div class="login">
		<span class="password">Forgot <a href="#">password?</a></span>
	</div>
		</form>
	<div class="row">
	  <div class="signin">
	  	<% if flash[:errors] %>
			<% flash[:errors].each do |error| %>
				<p><%= error %></p>
			<% end %>
		<% end %>

	    <%= form_for(@user) do |f| %>
	      <%= f.label :name %>
	      <%= f.text_field :name %>

	      <%= f.label :email %>
	      <%= f.email_field :email %>

	      <%= f.label :password %>
	      <%= f.password_field :password %>

	      <%= f.label :password_confirmation, "Confirmation" %>
	      <%= f.password_field :password_confirmation %>

	      <%= f.submit "Create my account", class: "btn btn-primary" %>
	    <% end %>
	  </div>
</div>
</body>
</html>