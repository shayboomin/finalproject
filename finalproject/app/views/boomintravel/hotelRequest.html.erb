<h1>Search Results</h1>
<%= hotel["city"] %>

<% @hotelList.each do |hotel| %>
<%= hotel %>
<h2>Hotel: <%= hotel["name"] %></h2>
<p>City: <%= hotel["city"] %></p>
<p>Hotel Rating: <%= hotel['hotelRating'] %> </p>
<p><%= raw CGI.unescapeHTML hotel["shortDescription"]%></p>
<p>Rate: <%= hotel["highRate"] %></p>
<p><%= hotel["hotelId"] %></p>
<p><%= hotel["supplierType"] %></p>
<p>Rate Key: <%= hotel["RoomRateDetailsList"]["RoomRateDetails"]["RateInfos"]["RateInfo"]["RoomGroup"]["Room"]["rateKey"] %></p>
<p>Room Type Code: <%= hotel["RoomRateDetailsList"]["RoomRateDetails"]["roomTypeCode"] %></p>
<p>Rate Code: <%= hotel["RoomRateDetailsList"]["RoomRateDetails"]["rateCode"]%></p>
<p>Average Rate:<%= hotel["RoomRateDetailsList"]["RoomRateDetails"]["RateInfos"]["RateInfo"]["ChargeableRateInfo"]["@averageRate"]%>
<form action="">
      <input type="hidden" name="hotelId" value= <%= hotel["hotelId"] %>>
      <input type="hidden" name="supplierType" value= <% hotel["supplierType"] %>>
      <input type="hidden" name="rateKey" value= <%hotel["RoomRateDetailsList"]["RoomRateDetails"]["RateInfos"]["RateInfo"]["RoomGroup"]["Room"]["rateKey"] %>>
      <input type="hidden" name="roomTypeCode" value= <% hotel["RoomRateDetailsList"]["RoomRateDetails"]["roomTypeCode"] %>>
      <input type="hidden" name="rateCode" value= <% hotel["RoomRateDetailsList"]["RoomRateDetails"]["rateCode"]%>>
      <input type="hidden" name="averageRate" value= <% hotel["RoomRateDetailsList"]["RoomRateDetails"]["RateInfos"]["RateInfo"]["ChargeableRateInfo"]["@averageRate"]%>>
<button>Book Now</button>
</form>
<hr>
<% end %>

</html>